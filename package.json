{
  "name": "nx-code-coverage",
  "version": "1.0.0",
  "description": "A comprehensive coverage reporter for Nx monorepos",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MatloobAltaf/nx-code-coverage.git"
  },
  "keywords": [
    "github-actions",
    "coverage",
    "nx",
    "monorepo",
    "lcov",
    "javascript"
  ],
  "author": "Matloob Altaf",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "glob": "^10.3.10",
    "lcov-parse": "^1.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  }
}
